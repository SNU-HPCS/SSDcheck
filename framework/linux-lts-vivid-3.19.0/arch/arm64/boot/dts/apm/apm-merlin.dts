/dts-v1/;

/include/ "apm-shadowcat.dtsi"

/ {
	model = "APM X-Gene Merlin board";
	compatible = "apm,merlin", "apm,xgene-shadowcat";

	chosen { };

	memory {
		device_type = "memory";
		reg = < 0x1 0x00000000 0x0 0x80000000 >;
	};
};

&serial0 {
	status = "ok";
};

&pcie0 {
	status = "ok";
};

&sata1 {
	status = "ok";
};

&sata2 {
	status = "ok";
};

&sata3 {
	status = "ok";
};

&sgenet0 {
	status = "ok";
};

&xgenet1 {
	status = "ok";
};
